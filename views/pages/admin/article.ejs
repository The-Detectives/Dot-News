<%- include('./partials/header') %>
    <div class="admin_article_container">
        <form action="<% if(article && article.content){ %>/admin/article/<%= article.id %> ?_method=put<% } %> " method="post">
            <h1 class="admin_article_title">
                Add/Edit Article
            </h1>
            <input type="hidden" name="id" <% if(article && article.id){ %> value="<%= article.id %>" <% } %>>
            <div class="input_container">
                <select name="category" id="category">
                    <option>Choose Category</option>
                    <% categories.forEach(cat => { %>
                        <option <% if(article && article.category_id === cat.id) { %> selected="selected" <% } %>   value="<%= cat.id %> "><%= cat.name %> </option>
                    <% }) %> 
                </select>
            </div>
            <div class="input_container">
                <input type="text" name="title" id="title" placeholder="Title of the article" <% if(article && article.title){ %> value="<%= article.title %>" <% } %> >
            </div>
            <div class="input_container">
                <input type="text" name="image" id="image" placeholder="Cover image URL" <% if(article && article.image){ %> value="<%= article.image %>" <% } %> >
            </div>
            <div class="input_container">
                <textarea name="content" id="editor" cols="30" rows="10">
                    <% if(article && article.content){ %> <%= article.content %> <% } %>
                </textarea>
            </div>
            <div class="input_container">
                <input type="submit" value="Save">
            </div>
        </form>
    </div>
<%- include('./partials/footer') %> 